    <body style="background-color: #f8f8f8;" class="content">
        <div class="navigation__background-c navigation__nav">
            <nav>
              <div class="row">
                   <div class="navigation_logo">
                    <a class="navigation_logo-link" href="/">A11yRecruiter</a>
                </div>
                <ul class=" u-margin-top-nav navigation__list">
                  <% if(!currentUser || !currentGoogleUser){%>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Contact Us</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Need Help?</a>
                    </li>
                    <% }
                    else if(currentUser.firstName ? currentUser.firstName : '') { %>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Jobs</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Students</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Employers</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Events</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Dashboard</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Messages</a>
                    </li>
                    <li class="navigation__item">
                      <div class="user-account">
                        <div class="img-container">
                          <a href="#">
                            <img class="img img-circle" alt="user-profile-image" src="./img/profile_pic.jpg">
                          </a>
                        </div>
                      </div>
                      <div class="account-name">
                        <span class="avatar-name"><%= currentUser.firstName %></span>
                      </div>
                    </li>
                    <!-- <li class="navigation__item">
                         <div class="user-account">
                           <span class="user-account--initials"><%= currentUser.firstName.charAt(0).toUpperCase();%><%= currentUser.lastName.charAt(0).toUpperCase();%></span>
                         </div>
                         <div class="account-name">
                           <span class="avatar-name"><%= currentUser.firstName %></span>
                         </div>
                    </li> -->
                    <li class="navigation__item">
                        <a class="navigation_link" href="/logout">Logout</a>
                    </li>
                    <% }
                    else if(currentGoogleUser.firstName ? currentGoogleUser.firstName : '') { %>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Jobs</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Students</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Employers</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Events</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Dashboard</a>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="">Messages</a>
                    </li>
                    <li class="navigation__item">
                         <div class="user-account">
                           <% if(currentGoogleUser.lastName){ %>
                             <span class="user-account--initials"><%= currentGoogleUser.firstName.charAt(0).toUpperCase();%><%=currentGoogleUser.lastName.charAt(0).toUpperCase(); %></span>
                           </div>
                           <% } else{ %>
                             <span class="user-account--initials"><%= currentGoogleUser.firstName.charAt(0).toUpperCase(); %></span>
                             <% } %>
                         </div>
                         <div class="account-name">
                           <span class="avatar-name"><%= currentGoogleUser.firstName %></span>
                         </div>
                    </li>
                    <li class="navigation__item">
                        <a class="navigation_link" href="/logout">Logout</a>
                    </li>
                  <% } %>

                </ul>
              </div>
            </nav>
        </div>
        <div class="row">
            <% if(error && error.length > 0){ %>
                <div class="message-container message-error">
                <p class="u-center-text error-text"> <%= error %></p>
            </div>
            <% } %>
             <% if(success && success.length > 0) { %>
                <div class="message-container message-success">
                <p class="u-center-text success-text"><%= success %></p>
                </div>
            <% } %>
        </div>

