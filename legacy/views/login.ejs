<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Me</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/main.css" />
    <script rel="preload" src="js/anime.js"></script>
</head>

<body>

    <div class="container">

        <div class="item f1">
            <form class="fl" action="#" method="POST">
                <h1>Create Account</h1>
                <input class="form-input" type="text" name="name" placeholder="Name">
                <!-- <input class="form-input" type="text" name="surename" placeholder="Surename"> -->
                <input class="form-input" type="text" name="email" placeholder="E-mail">
                <input class="form-input" type="password" name="pwd" placeholder="Password">
                <input class="form-input" type="password" name="pwd-repeat" placeholder="Repeat Password">
                <button class="btn btnR" type="submit" name="reg">Register</button>
            </form>
        </div>

        <div class="item f2">
            <div class="center">
                <h1 class="l">Register Account</h1>
                <!-- <h3 class="l">Register Account</h3> -->
            </div>
            <div class="center">
                <h1 class="r">Log in</h1>
                <!-- <h3 class="r">Log in</h3> -->
            </div>
            <button class="btn btnSi">
                <div class="pos bR">Register</div>
                <div class="pos bL">Log in</div>
            </button>
        </div>

        <div class="item f3">
            <form class="fl" action="#" method="POST">
                <h1>Log In</h1>
                <input class="form-input" type="text" name="mailuid" placeholder="E-mail">
                <input class="form-input" type="password" name="pwd" placeholder="Password">
                <button class="btn btnL" type="submit" name="login">Log in</button>
            </form>
        </div>

    </div>

    <script src="js/main.js"></script>
</body>

</html>